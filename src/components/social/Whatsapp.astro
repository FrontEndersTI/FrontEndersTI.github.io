---
import { Icon } from 'astro-icon';

const { url = Astro.request.url, description } = Astro.props;

let URL = `https://api.whatsapp.com/send?text=${description} ${url}`;
---

<a class="button has-icon behavior-text size-small" target="_blank" href={URL} rel="noopener noreferrer">
  <Icon pack="mdi" name="whatsapp" />
</a>
